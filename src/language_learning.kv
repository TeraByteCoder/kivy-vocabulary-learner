WindowManager:
    HomeScreen:
    Lesson:
    Input:
    SettingScreen:
    DictonaryMainScreen:
    DictonaryAllScreen:
    DictonaryLearningScreen:
    DictonaryDoneScreen:

<HomeScreen>:
    name: "home"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        Label:
            text: root.get_text_from_json('title')
            font_size: 64
            color: 0.92, 0.45, 0
        Button:
            text: root.get_text_from_json('study_button')
            font_size: 32
            size: 100, 50
            on_release:
                app.root.current = "lesson"
                root.manager.transition.direction = "left"
        Button:
            text:root.get_text_from_json('expandlist_button')
            size: 0.95, 0.5
            font_size: 32
            on_release:
                app.root.current = "input"
                root.manager.transition.direction = "right"
        Button:
            text: root.get_text_from_json('dictionary_button')
            font_size: 24
            on_release:
                app.root.current = "dictonarymain"
                root.manager.transition.direction = "down"
        Button:
            text: root.get_text_from_json('settings_button')
            font_size: 24
            on_release:
                app.root.current = "settings"
                root.manager.transition.direction = "up"


<Lesson>:
    name: "lesson"
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: correct_word
            text: ''
            font_size: 32
        Label:
            id: word_to_translate
            text: root.get_text_from_json('pressstart_text')
            font_size: 32
        TextInput:
            id: userinput
            background_color: 0, 0, 0, 1
            foreground_color: 1, 1, 1, 1
            font_size: 32
            halign: "center"
        Button:
            id: nextbtn
            text: root.get_text_from_json('start_button')
            font_size: 24
            on_release: root.submit()
        Button:
            text: root.get_text_from_json('mainmenu_button')
            font_size: 24
            on_release:
                app.root.current = "home"
                root.manager.transition.direction = "right"



<Input>:
    name: "input"
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.get_text_from_json('entertext_text')
            font_size: 32
        TextInput:
            id: textinput
            background_color: 0, 0, 0, 1
            foreground_color: 1, 1, 1, 1
        Button:
            text: root.get_text_from_json('addtodictionary_button')
            font_size: 24
            on_release:
                root.text_materialise()
        Button:
            text: root.get_text_from_json('mainmenu_button')
            font_size: 24
            on_release:
                app.root.current = "home"
                root.manager.transition.direction = "left"

<SettingScreen>:
    name: "settings"
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.get_text_from_json('title_text')
            font_size: 32
        Label:
            text: 'Dropbox Api key'
            font_size: 32
            color: 0.92, 0.45, 0
        TextInput:
            id: openaikey
            text: "hier den dropbox api key eingeben"
            background_color: 0, 0, 0, 1
            foreground_color: 1, 1, 1, 1
            font_size: 32
            halign: "center"


        Button:
            text: root.get_text_from_json('mainmenu_button')
            font_size: 24
            on_release:
                app.root.current = "home"
                root.manager.transition.direction = "down"

<DictonaryMainScreen>:
    name: "dictonarymain"
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.get_text_from_json('title_text')
            font_size: 32
        Button:
            text: root.get_text_from_json('mainmenu_button')
            font_size: 24
            on_release:
                app.root.current = "home"
                root.manager.transition.direction = "up"
        Button:
            text: root.get_text_from_json('fulldictionary_button')
            font_size: 24
            on_release:
                app.root.current = "dictonaryall"
                root.manager.transition.direction = "left"
        Button:
            text: root.get_text_from_json('currentlylearning_button')
            font_size: 24
            on_release:
                app.root.current = "dictonarylearning"
                root.manager.transition.direction = "left"
        Button:
            text: root.get_text_from_json('alredylearned_button')
            font_size: 24
            on_release:
                app.root.current = "dictonarydone"
                root.manager.transition.direction = "left"
        Button:
            text: root.get_text_from_json('refresh_button')
            font_size: 24
            on_release:

<DictonaryAllScreen>:
    name: "dictonaryall"
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                cols: 3
                size_hint_y: None
                height: self.minimum_height
                padding: 10

                size_hint: 1, None
                height: self.minimum_height

                Label:
                    text: root.string2
                    markup: True
                    halign: "right"
                    size_hint_y: None
                    size_hint_x: 0.4
                    height: self.texture_size[1]

                Label:
                    text: "\n\n"+("------------------------------------------------------------------------------------------------\n" * (root.lines -3))
                    markup: True

                    size_hint_y: None
                    size_hint_x: 0.4
                    height: self.texture_size[1]

                Label:
                    text: root.string1
                    markup: True

                    size_hint_y: None
                    size_hint_x: 0.4
                    height: self.texture_size[1]

        Button:
            text: 'Zurück zu Dictonary Hauptmenü'
            font_size: 24
            size_hint: 1, None
            height: 50
            on_release:
                app.root.current = "dictonarymain"
                root.manager.transition.direction = "right"


